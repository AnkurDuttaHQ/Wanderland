<% layout("/layout/boilerplate") %>
<h1 class="col-6 offset-3">SignUp in wanderland</h1>
<div class="row">
    <div class="col-6 offset-3" >
        <form method="post" action="/signup" class="needs-validation" novalidate>
    
        <div class="mb-3 mt-2">
          <label for="username" class="form-label"> Username</label>
          <input type="text" name="username" id="username" class="form-control" required>
          <div class="valid-feedback">
      username Looks good!
    </div>
        </div>

        <div class="mb-3 mt-2">
          <label for="email" class="form-label"> Email</label>
          <input type="email" name="email" id="email" class="form-control" required>
        </div>

         
        <div class="mb-3 mt-2">
          <label for="pwd" class="form-label">Password</label>
          <input type="password" name="password" id="pwd" class="form-control" required>
        </div>
        <hr>
        <div class="login">
      <p>Already have an account?</p>
      <a href="/login">login</a>
        </div>
        
          <button class=" btn btn-outline-success">SignUp</button>

        </form>
    </div>
</div>
